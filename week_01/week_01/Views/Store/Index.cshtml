@model IEnumerable<week_01.Models.Store>

@{
    ViewData["Title"] = "Store";
}

<h1>Stores</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Branch)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Region)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Building)
            </th>
            <th scope="col">
                Unit Number
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">
                    @Html.DisplayFor(modelItem => item.Branch)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.Region)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BuildingName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitNum)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Branch">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Branch">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Branch">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
