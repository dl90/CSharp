@model week_04.ViewModels.SiteUserVM

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<h4>SiteUserVM</h4>
<h1>Welcome @ViewBag.FirstName @ViewBag.LastName</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@Html.ActionLink("Clear the First Name Cookie",     // Text
                 "ClearCookie",                     // Method
                 "Home", new { key = "FirstName" })
<br />
@Html.ActionLink("Clear Last Name Cookie", "ClearCookie", "Home", new { key = "LastName" })

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
